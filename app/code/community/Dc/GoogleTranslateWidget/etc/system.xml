<config>
    <sections>
        <googletranslatewidget translate="label" module="googletranslatewidget">
            <label>Google Translate Widget</label>
            <tab>dc</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <sort_order>100030</sort_order>
            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <code translate="label comment">
                            <label>Code</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Enter the value of google-translate-customization tag.]]></comment>
                        </code>
                        <display translate="label">
                            <label>Display Type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>googletranslatewidget/system_config_source_display</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display>
                        <page_language translate="label">
                            <label>Page Language</label>
                            <frontend_type>select</frontend_type>
                            <source_model>googletranslatewidget/system_config_source_language</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </page_language>
                        <specific_languages translate="label">
                            <label>Allow Specific Languages</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </specific_languages>
                        <languages translate="label">
                            <label>Allowed Languages</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>googletranslatewidget/system_config_source_language</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <specific_languages>1</specific_languages>
                            </depends>
                        </languages>
                        <page_multilanguage translate="label">
                            <label>Is Page Multilanguage?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </page_multilanguage>
                        <use_ga translate="label">
                            <label>Track Translation Traffic</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_ga>
                        <ga_code translate="label">
                            <label>Analytics Web Property ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <use_ga>1</use_ga>
                            </depends>
                        </ga_code>
                     </fields>
                </settings>
            </groups>
        </googletranslatewidget>
    </sections>
</config>
